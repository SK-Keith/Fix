<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
  <display-name>Fix</display-name>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>cn.BX.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>cn.BX.Users.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/jsps/student/*</url-pattern>
    <url-pattern>/Users/RangeServlet</url-pattern>
    <url-pattern>/Users/FloorServlet</url-pattern>
    <url-pattern>/Users/RecordServlet</url-pattern>
    <url-pattern>/Users/RecordAddServlet</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>cn.BX.user.web.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BaseServlet</servlet-name>
    <servlet-class>cn.BX.base.BaseServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FloorServlet</servlet-name>
    <servlet-class>cn.BX.Users.floor.web.servlet.FloorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecordServlet</servlet-name>
    <servlet-class>cn.BX.Users.record.web.servlet.RecordServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecordAddServlet</servlet-name>
    <servlet-class>cn.BX.Users.record.web.servlet.RecordAddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>VerifyCodeServlet</servlet-name>
    <servlet-class>cn.BX.vcode.VerifyCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RangeServlet</servlet-name>
    <servlet-class>cn.BX.Users.range.web.servlet.RangeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RangeServlet</servlet-name>
    <url-pattern>/Users/RangeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VerifyCodeServlet</servlet-name>
    <url-pattern>/servlet/VerifyCodeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/servlet/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BaseServlet</servlet-name>
    <url-pattern>/Users/BaseServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FloorServlet</servlet-name>
    <url-pattern>/Users/FloorServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RecordServlet</servlet-name>
    <url-pattern>/Users/RecordServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RecordAddServlet</servlet-name>
    <url-pattern>/Users/RecordAddServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>